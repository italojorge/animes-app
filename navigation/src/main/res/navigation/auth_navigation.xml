<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="br.com.animes.feature.auth.login.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
    </fragment>
    <include app:graph="@navigation/main_navigation" />
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="br.com.animes.feature.auth.changepassword.ChangePasswordFragment"
        android:label="@string/change_first_password_toolbar_title"
        tools:layout="@layout/fragment_change_password">
        <action
            android:id="@+id/action_changePasswordFragment_to_main_navigation"
            app:destination="@id/main_navigation" />
    </fragment>
</navigation>